    Title="SAURON Controller" Height="272" Width="778" ResizeMode="NoResize">
    <Grid Width="754" Height="240">
        <Label FontSize="24" Foreground="Black" Height="39" Margin="0,8,53,0" Name="txtIpSauron" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="207">127.0.0.1</Label>
        <Image Height="35" HorizontalAlignment="Right" Margin="0,12,12,0" Name="image6" Stretch="Fill" VerticalAlignment="Top" Width="35" Source="/SauronWPFController;component/Images/gconf-editor.png"  MouseLeftButtonUp="configureClick" />


        <Image Margin="-500,0,0,30"  Name="image1" Stretch="Fill"  Width="75" Height="75" Source="/SauronWPFController;component/Images/gnome-mines.png"  MouseLeftButtonUp="markClick" VerticalAlignment="Bottom" />
