<?xml version="1.0" encoding="ISO-8859-1"?>

<property>
	<!-- Variáveis necessárias para iniciar o log4j.
	     log4j é o primeiro item a ser carregado
	-->
	<log4j>
		<property-handler>br.com.r4j.configurator.Log4JPropertyHandler</property-handler>
		<configurator><class name='org.apache.log4j.xml.DOMConfigurator'/></configurator>
		<log4j-resource type='string_local_path'>./conf/log4j.xml</log4j-resource>
		<log4j-logs-location type='string_local_path'>./log</log4j-logs-location>
	</log4j>

	<robosim>
		<estimator_provider>
			<estimators>
				<estimator_1 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieExtendedKalmanFilter" name="Extended Kalman Filter" id="ekf" inverse_model="false" min_sensors="0" max_sensors="-1" dyn_model="required"/>
				<estimator_2 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieMeasureOnlyFilter" name="Filtro de Observação" id="fobs" inverse_model="true" min_sensors="1" max_sensors="1" dyn_model="dont_use"/>
				<estimator_3 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieDynamicModelOnlyFilter" name="Filtro de Movimento" id="fmov" inverse_model="false" min_sensors="0" max_sensors="0" dyn_model="required"/>
				<estimator_4 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieUnscentedKalmanFilter" name="Unscented Kalman Filter" id="ukf" inverse_model="false" min_sensors="0" max_sensors="-1" dyn_model="required"/>
				<estimator_5 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieParticleFilter" name="Particle Filter" id="pf" inverse_model="false" min_sensors="0" max_sensors="-1" dyn_model="required">
					<resamplingMinFactor>0.1</resamplingMinFactor>
					<numberOfParticles>100</numberOfParticles>
				</estimator_5>
				<estimator_4_2 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieAugmentedUnscentedKalmanFilter" name="Augmented Unscented Kalman Filter" id="ukf" inverse_model="false" min_sensors="0" max_sensors="-1" dyn_model="required"/>
				<estimator_4_3 class_name="br.com.r4j.robosim.estimator.impl.AditiveNosieSquareRootUnscentedKalmanFilter" name="Square Root Unscented Kalman Filter" id="ukf" inverse_model="false" min_sensors="0" max_sensors="-1" dyn_model="required"/>
			</estimators>

			<real_world>
				<sensors>
					<sensor_1 class="br.com.r4j.robosim.realrobot.RealSonarSensor" name="Sonares" id="sonares">
						<sonar_error>25</sonar_error>
						<max_range>3000</max_range>
						<beta>30</beta>
					</sensor_1>
					<sensor_2 class="br.com.r4j.robosim.realrobot.OdoSensor" name="Odometros" id="odometros"/>
				</sensors>
				<sensor_models>
					<sensor_model_1 class="br.com.r4j.robosim.model.SonarModel" name="sonar" sensor="sonares" inverse_model_avail="false"/>
				</sensor_models>
				<dynamic_models>
					<dynamic_model_1 class="br.com.r4j.robosim.model.OdometryModel" name="Odometros" sensor="odometros"/>
				</dynamic_models>
			</real_world>

			<sim_world>
				<sensors>
					<sensor_1 class="br.com.r4j.robosim.simrobot.SimSonarSensor" name="Sonares" id="sonares">
						<sonar_error>25</sonar_error>
						<max_range>3000</max_range>
						<beta>30</beta>
					</sensor_1>
					<sensor_2 class="br.com.r4j.robosim.simrobot.SimOdoSensor" name="Odometros" id="odometros">
						<phoErrorFront4mm>0.04</phoErrorFront4mm>
						<phoErrorTheta4mm>0.015</phoErrorTheta4mm>
						<thetaError4Gra>0.10</thetaError4Gra>
					</sensor_2>
					<sensor_3 class="br.com.r4j.robosim.simrobot.SimRadarSensor" name="Radar" id="radar">
						<phoErrorMm>50</phoErrorMm>
						<thetaErrorGra>5</thetaErrorGra>
						<radar_x>-2000</radar_x>
						<radar_y>-2000</radar_y>
					</sensor_3>

				</sensors>
				<sensor_models>
					<sensor_model_1_0 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 1" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>0</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_0>
					<sensor_model_1_1 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 2" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>1</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_1>
					<sensor_model_1_2 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 3" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>2</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_2>
					<sensor_model_1_3 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 4" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>3</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_3>
					<sensor_model_1_4 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 5" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>4</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_4>
					<sensor_model_1_5 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 6" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>5</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_5>
					<sensor_model_1_6 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 7" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>6</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_6>
					<sensor_model_1_7 class="br.com.r4j.robosim.model.SonarModel" name="Sonar 8" sensor="sonares" inverse_model_avail="false">
						<idx_sonar>7</idx_sonar>
						<phoErrorFront4mm>0.02</phoErrorFront4mm>
					</sensor_model_1_7>
					<sensor_model_2 class="br.com.r4j.robosim.model.RadarModel" name="radar" sensor="radar" inverse_model_avail="true"/>
				</sensor_models>
				<dynamic_models>
					<dynamic_model_1 class="br.com.r4j.robosim.model.OdometryModel" name="Odometros" sensor="odometros"/>
				</dynamic_models>
			</sim_world>
		</estimator_provider>
	
		<readings type='string_local_path'>./data/readings.data</readings>
		<realpose type='string_local_path'>./data/realpose.data</realpose>
		<worldmap type='string_local_path'>./data/worldmap.data</worldmap>
		<actions type='string_local_path'>./data/actions.data</actions>
	</robosim>


</property>
